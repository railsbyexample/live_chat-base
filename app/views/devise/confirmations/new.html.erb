<div class="container">
  <h5>Resend confirmation instructions</h5>

  <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
    <%= devise_error_messages! %>

    <%= form_group :email, :email_field, f, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>

    <%= form_button 'Resend confirmation instructions', f %>
  <% end %>

  <%= render 'devise/shared/links' %>
</div>
