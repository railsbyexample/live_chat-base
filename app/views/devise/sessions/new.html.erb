<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <%= devise_error_messages! %>

    <%= form_group :email, :email_field, f, autofocus: true %>
    <%= form_group :password, :password_field, f, autocomplete: "off" %>

    <% if devise_mapping.rememberable? -%>
      <div class="custom-control custom-checkbox">
        <%= f.check_box :remember_me, class: 'custom-control-input' %>
        <%= f.label :remember_me, class: 'custom-control-label' %>
      </div>
    <% end -%>

    <%= form_button "Log in", f%>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
