<%= form_for Conversation.new, html: {class: 'list-group-item list-group-item-action'} do |f| %>
  <%= f.hidden_field :user_1_id, value: current_user.id %>
  <%= f.hidden_field :user_2_id, value: user.id %>
  <%= gravatar_for user %>
  <%= user.name %>
  <%= f.submit "talk", class: "btn btn-primary float-xs-right" %>
<% end %>
