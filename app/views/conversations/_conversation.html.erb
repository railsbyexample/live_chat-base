<%= link_to conversation, class: 'list-group-item list-group-item-action', id: 'conversation-' + conversation.id.to_s do %>
  <%= gravatar_for other_user(conversation) %>
  <%= other_user(conversation).name %>
  <div class="row">
    <span id="conversation-preview">
      <%= conversation.messages.last.user.name %>: <%= conversation.messages.last.body %>
    </span>
  </div>
<% end %>
